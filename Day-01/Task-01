import requests  # This module lets us make HTTP requests to APIs

# ğŸ”§ GitHub username or organization you want to check repos for
GITHUB_USERNAME = "octocat"

# ğŸ”— GitHub API URL to get public repos for that user/org
BASE_URL = f"https://api.github.com/users/{GITHUB_USERNAME}/repos"

# ğŸ“¨ Send GET request to the GitHub API to fetch repos
response = requests.get(BASE_URL)

# ğŸ“¦ Convert the JSON response to a Python list of dictionaries
repos = response.json()

# ğŸ” Loop through each repository
for repo in repos:
    # ğŸ“ Get the name of the repository
    repo_name = repo['name']
    print(f"\nğŸ” Issues in repo: {repo_name}")
    
    # ğŸ“¦ Construct the URL to get issues for this specific repo
    issues_url = f"https://api.github.com/repos/{GITHUB_USERNAME}/{repo_name}/issues"
    
    # ğŸ“¨ Send GET request to fetch issues for the repo
    issues_response = requests.get(issues_url)
    
    # ğŸ“¦ Convert the issues JSON response into Python list
    issues = issues_response.json()
    
    # âœ… Check if there are any issues
    if issues:
        for issue in issues:
            # âŒ Skip pull requests (they also appear in issues API)
            if 'pull_request' not in issue:
                # ğŸ“ Get issue title
                title = issue['title']
                
                # ğŸ‘¤ Get the username of the person who opened the issue
                author = issue['user']['login']
                
                # ğŸ“¢ Print the result
                print(f"ğŸ“Œ {title} (by {author})")
    else:
        # â„¹ï¸ If no issues in repo
        print("No open issues.")
